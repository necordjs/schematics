{
	"name": "@necord/schematics",
	"description": "A collection of schematics for Necord projects with NestJS",
	"version": "1.1.5",
	"scripts": {
		"build": "rimraf -rf dist && tsc -p tsconfig.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky install .github/husky",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-path .gitignore {integration,src}/**/*.ts",
		"test": "jest"
	},
	"schematics": "./src/collection.json",
	"files": [
		"src",
		"*.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"license": "MIT",
	"keywords": [
		"schematics",
		"nest",
		"nestjs-cli",
		"nestjs",
		"cli",
		"inquirer",
		"necord"
	],
	"dependencies": {
		"@angular-devkit/core": "14.0.5",
		"@angular-devkit/schematics": "14.0.5",
		"rxjs": "7.8.0",
		"@nestjs/schematics": "9.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "17.5.0",
		"@commitlint/config-angular": "17.4.4",
		"@types/jest": "29.5.0",
		"@types/node": "18.15.6",
		"@typescript-eslint/eslint-plugin": "5.56.0",
		"@typescript-eslint/parser": "5.56.0",
		"eslint": "8.38.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-import": "2.27.5",
		"husky": "8.0.3",
		"jest": "29.5.0",
		"prettier": "2.8.7",
		"release-it": "15.10.1",
		"rimraf": "4.4.1",
		"ts-jest": "29.0.5",
		"typescript": "5.0.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/necordjs/schematics.git"
	},
	"homepage": "https://github.com/necordjs/schematics.git#readme"
}
