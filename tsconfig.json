{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": ".",
		"strict": true,
		"noUnusedLocals": false,
		"sourceMap": true,
		"lib": [
			"ES7"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
